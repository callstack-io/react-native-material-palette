{
  "name": "react-native-material-palette",
  "version": "0.0.6",
  "description": "",
  "license": "MIT",
  "repository": "github:callstack-io/react-native-material-palette",
  "author": {
    "name": "Raul Gomez Acuna",
    "email": "rauliyohmc@gmail.com"
  },
  "main": "./dist/index.js",
  "files": [
    "dist",
    "android"
  ],
  "scripts": {
    "flow": "flow",
    "lint": "eslint .",
    "clean": "del dist",
    "prepublish": "yarn run clean && babel src --out-dir dist --ignore '__tests__/'",
    "build:watch": "yarn run clean && babel src --out-dir dist --watch --ignore '__tests__/'",
    "test": "jest",
    "test:coverage": "yarn test && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "precommit": "yarn run lint"
  },
  "dependencies": {
    "hoist-non-react-statics": "^2.2.0",
    "lodash": "^4.17.4",
    "prop-types": "^15.5.10"
  },
  "devDependencies": {
    "babel-cli": "^6.24.0",
    "babel-core": "^6.24.0",
    "babel-eslint": "^7.2.1",
    "babel-preset-react-native": "^2.1.0",
    "concurrently": "^3.4.0",
    "coveralls": "^2.13.1",
    "del-cli": "^1.1.0",
    "enzyme": "~3.0.0-alpha.1",
    "eslint": "^4.4.1",
    "eslint-config-callstack-io": "^0.4.1",
    "flow-bin": "~0.49.0",
    "husky": "^0.14.3",
    "jest": "^19.0.2",
    "prettier": "^0.22.0",
    "react": "16.0.0-alpha.12",
    "react-dom": "16.0.0-alpha.12",
    "react-native": "~0.47.0",
    "react-test-renderer": "16.0.0-alpha.12"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "babel": {
    "presets": [
      [
        "react-native"
      ]
    ]
  },
  "jest": {
    "preset": "react-native",
    "setupFiles": [
      "<rootDir>/__setup__/enzyme.js"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules"
    ],
    "collectCoverage": true
  }
}
